<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/system_interface_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Statusbar -->
    <PreferenceScreen
        android:key="status_bar"
        android:fragment="com.android.settings.slim.StatusBar"
        android:title="@string/status_bar_title" />

    <!-- Battery styles -->
     <PreferenceScreen
        android:fragment="com.android.settings.slim.BatteryIconStyle"
        android:key="battery_style_pref"
        android:title="@string/battery_icon_title" />

     <PreferenceScreen
        android:key="notification_drawer"
        android:fragment="com.android.settings.slim.NotificationDrawerSettings"
        android:title="@string/notification_drawer_title" />

</PreferenceScreen>
